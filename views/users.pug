doctype html
head
  title DFG
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='/static/css/user.css' rel='stylesheet' type='text/css')
  script(src='/static/js/user.js' defer='')
  script(src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")
include includes/admin_nav.pug 
h1 Brugere
center
  button(class="refresh" onclick="refreshUsers()") refresh 
table
  tbody
button.create Opret
#overlay
#modal
  form(action='/admin/opretBrugerApi', method='post')
    span.close &#x2716;
    label(for='userName')
      | Brugernavn
      span *
    input#userName(type='text', required='required', name='userName')
    label(for='password')
      | Kodeord
      span *
    input#password(type='password', name='password')
    label(for='firstName') Fornavn
    input#firstName(type='text', name='firstName')
    label(for='lastName') Efternavn
    input#lastName(type='text', name='lastName')
    label(for='email') Email
    input#email(type='email' required='required', name='email')
    label(for='phone') Telefon
    input#phone(type='tel' maxlength='8', name='phone')
    label(for='address') Adresse
    input#address(type='text', name='address')
    label(for='city') By
    input#city(type='text', name='city')
    label(for='zipCode') Postnummer
    input#zipCode(type='number' maxlength='4', name='zipCode')
    label(for='birthday') Fødselsdato
    input#birthday(type='date', name='birthday')
    label Køn
    .sex
      label(for='male') Mand
      input#male(type='radio' value='Mand' name='gender' checked='checked')
      label(for='female') Kvinde
      input#female(type='radio' value='Kvinde' name='gender')
    label(for='photo') Billede
    input#photo(type='file' accept='image/*')
    button(type='reset') Ryd felter
    button(type='submit') Godkend
